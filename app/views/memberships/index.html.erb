<h1><%= @group.name %> Members</h1>

<h3>Current Group:</h3>
<% if @approved.any? %>
  <% @approved.each do |membership| %>
    <p><%= User.find(membership.user_id).username %></p>
  <% end %>
<% else %>
  <p>There are currently no members in your group! You can approve pending membership requests below.</p>
<% end %>


<h3>Pending:</h3>

<% if @pending.any? %>
  <% @pending.each do |membership|%>
    <p><%= User.find(membership.user_id).username %> <button class='btn btn-success'><%= link_to "Approve", group_membership_path(@group, membership), :method => :put %></button> </p>
  <% end %>
<% else %>
  <p>There are currently no pending memberships.</p>
<% end %>



<% if @rejected.any? %>
  <h3>Rejected:</h3>
  <% @rejected.each do |membership| %>
    <%= User.find(membership.user_id).username  %>
  <% end %>
<% end %>
